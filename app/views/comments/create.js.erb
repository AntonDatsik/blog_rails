$(document).ready(function() {

	$("div.comments-render").append('<div class="container-fluid comment">\
	  	<div class="row">\
			<div class="col-md-4">\
	      		<%= thumb_avatar_for @user %>\
	      		<h3><%= link_to @user.name, @user %></h3>\
	      		<h6>Email: email@mail.ru</h6>\
	      		<h6>Old: 20 Year</h6>\
	      		<h6><%= link_to "All posts...", @user %></h6>\
	    	</div>\
	    	<div class="col-sm-8" style="background-color:none;">\
	    		<%= @comment.content %>\
	    	</div>\
  		</div>\
  		<span class="text-muted">\
		    Commented <%= time_ago_in_words(@comment.created_at) %> ago.\
		</span>\
	   	<% if current_user? @user %>\
	    	| <%= link_to "delete", @comment, method: :delete, remote: true, :class => "del-button"%>\
	  	<% end %>\
  		<hr>\
  	</div>');
  	var $comments_count = $('.comments-count');
	var count = parseInt($comments_count.text());
	++count;
	$comments_count.text(count);
	$('form').find('div.field').find('textarea').val('');
});
