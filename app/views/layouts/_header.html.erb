<div class="navbar navbar-static-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#responsive-menu">
                <span class="sr-only">Открыть анимацию</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            
            <%= link_to "Blog", root_path, :class=>"navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="responsive-menu">
            <ul class="nav navbar-nav">
                <li><%= link_to "Home",    root_path %></li>
                <li><%= link_to "Help",    help_path %></li>
                <% if signed_in? %>
                    <li><%= link_to "Users", users_path %></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Account <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "My posts", current_user %></li>
                            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                            <li><%= link_to "Create new post", new_post_path %></li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "Sign out", signout_path, method: "delete" %>
                            </li>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Sign in", signin_path %></li>
                    <li><%= link_to "Sign up!", sign_up_path %></li>
                <% end %>
            </ul>
            <% if !signed_in? %>
                <%= form_for(:session, url: sessions_path, html: { class: "navbar-form navbar-right hidden-sm"}) do |f| %>

                    
                    <%= f.text_field :name, class: 'form-control', :placeholder => "Name" %>

                    <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>

                    <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
                <% end %>
            <% else %>
                <%= link_to "Create new post", new_post_path, :class=>"btn btn-primary active pull-right", :style=>"margin-top: 10px;" %>
            <% end %>
        </div>
    </div>
</div>
