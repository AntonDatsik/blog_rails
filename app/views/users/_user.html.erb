<br><hr>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<%= thumb_avatar_for user %>
			<h3><%= link_to user.name, user %></h3>
            <h6>Email: email@mail.ru</h6>
            <h6>Old: 20 Year</h6>
            <h6><%= link_to "All posts...", user %></h6>
		</div>

        <div class="col-md-8 col-lg-8">
        	<h3> <%= user.name %> posts</h3>
        	<% @posts = user.posts %>
     		<ul>
	        	<% @posts.each do |post| %>
	        		<li><%= link_to post.title, post_path(post.id) %></li>
	        	<% end %>
	        <ul>
        </div>
	</div>
</div>
